<!-- A card component that displays a blog post with the title, author name, author social media links, content, date, and number of comments -->

<div class="card mb-6">
  <header class="card-header card-header-title has-background-grey-lighter">
    <!-- The title of the blog post is a link that takes the user to the post page -->
    <div class="column">
      <p class="has-text-primary-light"></p>
      <a href="/post/{{id}}" class="has-text-black is-capitalized is-pulled-left">{{title}}</a>
    </div>

    <div class="column">
      <span class=""></span>
    </div>
  </header>

  <div class="card-content">
    <!-- The content of the blog post -->
    <div class="content has-text-justified">
      {{post_content}}
    </div>

    <div class="is-pulled-right">
      <!-- The author of the blog post -->
      <b>{{user.username}}</b> |
      <!-- Links to the author's social media profiles -->
      <a href="https://twitter.com/{{user.twitter}}"><i class="fab fa-twitter"></i></a>
      <a href="https://github.com/{{user.github}}"><i class="fab fa-github"></i></a>
      <!-- The date when the blog post was created -->
      | {{format_date created_at}} |
      <!-- The number of comments on the blog post -->
      <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
  </div>
</div>
