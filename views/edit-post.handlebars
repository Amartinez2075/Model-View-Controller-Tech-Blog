<article>
  <a href="/dashboard" class="is-pulled-right"> &larr; back to dashboard</a> <!-- link to go back to dashboard -->
  <h2 class="title mt-5">edit post</h2><hr> <!-- title of the page -->
  <form class="edit-post-form"> <!-- form for editing the post -->
    <div>
        <label for="post-title">post title:</label> <!-- label for post title input field -->
      <input class="input" name="post-title" type="text" value="{{post.title}}" /> <!-- input field for post title -->
    </div>
    <div>
        <label for="post-content">post content:</label> <!-- label for post content input field -->
      <input class="textarea" name="post-content" type="text" value="{{post.post_content}}" /> <!-- input field for post content -->
    </div>
    <div class="is-pulled-right">
       created by you on {{format_date post.created_at}} <!-- display when the post was created -->
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a> <!-- link to the post with number of comments -->
    </div>
    <button type="submit" class="button is-success">save post</button> <!-- button to save the edited post -->
    <button type="button" class="button is-danger delete-post-btn">delete post</button> <!-- button to delete the post -->
  </form>
</article>

{{> comments post.comments}} <!-- partial for displaying comments for the post -->

<script src="/javascript/edit-post.js"></script> <!-- script for editing the post -->
<script src="/javascript/delete-post.js"></script> <!-- script for deleting the post -->
<script src="/javascript/comment.js"></script> <!-- script for commenting on the post -->
